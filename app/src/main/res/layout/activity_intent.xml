<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.blogga.Activities.IntentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:id="@+id/intent_act_post_image_layout"
        >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/community_bg"
            android:scaleType="centerCrop"
            android:id="@+id/intent_act_post_image"
            />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="#fff"
          android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/intent_act_poster_image"
            android:src="@drawable/placeholder"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="22dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/intent_act_poster_image">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:id="@+id/intent_act_poster_username"

                android:text="UserName"
                android:textStyle="bold"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/intent_act_poster_time"
                android:text="12/16/2018"
                android:textColor="#838383"
                android:layout_below="@id/intent_act_poster_username"
                />

        </RelativeLayout>




    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/intent_act_post_image_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/event_desc_title_layout"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_error_outline_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/intent_act_post_title"
                        android:text="New Borrusia Dortmunt kit reveal"
                        android:textColor="#000"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />

                </LinearLayout>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/event_desc_time"
                android:layout_below="@id/event_desc_layout"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_date_range_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.198.2019"
                        android:id="@+id/intent_act_post_time"
                        android:textColor="#000"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/event_location_layout"
                android:layout_below="@id/event_desc_time"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location_on_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dortmund, Germany"
                        android:textColor="#000"
                        android:id="@+id/intent_act_post_location"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/event_desc_layout"
                android:layout_below="@id/event_desc_title_layout"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_horiz_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This event is only available to die hard fans and daring journalists"
                        android:textColor="#000"
                        android:id="@+id/intent_act_post_desc"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        />

                </LinearLayout>




            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
