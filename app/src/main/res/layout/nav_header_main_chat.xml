<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"

    android:gravity="start"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/nav_image_layout">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_header_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/placeholder"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/nav_image_layout"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/nav_header_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Favour Olukayode"
            android:layout_alignParentStart="true"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/nav_header_user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="new@gmail.com"
            android:layout_alignStart="@id/nav_header_user_name"
            android:layout_below="@id/nav_header_user_name"
            android:textColor="#fff"/>

    </RelativeLayout>





</RelativeLayout>
