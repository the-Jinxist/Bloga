<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="10dp"
    android:background="@android:color/transparent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:src="@drawable/community_bg"
            android:id="@+id/event_full_pic"
            android:scaleType="fitCenter"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_event_full_pic"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            android:id="@+id/full_pic_event_title"
            android:textStyle="bold"
            android:layout_below="@id/cancel_event_full_pic"
            android:layout_marginStart="10dp"

            android:text="Event Title!!"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/10/1018"
            android:textColor="#fff"
            android:id="@+id/full_pic_event_time"
            android:layout_below="@id/full_pic_event_title"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full_pic_share_event"
            android:src="@drawable/ic_share_black_24dp"
            android:tint="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>